{
    "manifest_version": 2,
    "name": "Doomscrollblocker",
    "version": "1.0",

    "icons": {
        "100": "smile.png"
    },
    "browser_action": {
        "default_icon": "smile.png",
        "default_title": "Whereami?",
        "default_popup": "popup/configure.html"
    },

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://www.youtube.com/"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": true,
        "type": "module"
    }
}
